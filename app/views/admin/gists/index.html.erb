<h1>Gists</h1>
<table class="table table-hover centered-data-table">
  <thead class="table-dark">
  <tr>
    <th><%= t('.question') %></th>
    <th><%= t('.url') %></th>
    <th class="sort-by-title pointer">
      <%= t('.email') %>
      <%= octicon 'arrow-up', class: 'text-success' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
  </tr>
  </thead>

  <tbody>
  <%= render @gists %>
  </tbody>
</table>
<br>
