<%= form_with(model: [:admin, test]) do |form| %>
  <%= render 'shared/errors', resource: test %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, id: :test_title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :level, class: "form-label" %>
    <%= form.number_field :level, id: :test_level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :title, { prompt: t('.category') }, { class: 'form-select' } %>
  </div>

  <p>
    <%= form.submit t('.create'), class: 'btn btn-primary' %>
  </p>
<% end %>
