<div class="col">
  <div class="card border-dark" style="width: 25rem;">
    <div class="card-body">
      <h5 class="text-center"><%= answer.body.length > 35 ? answer.body.truncate(35) : answer.body %></h5>
      <h6 class="text-center"><%= t('.correct') %>: <%= t answer.correct.to_s %></h6>
      <div class="d-flex justify-content-center align-items-center">
        <div class="btn-group" role="group">
          <%= link_to t('action.show'), admin_answer_path(answer),type:'button', class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to t('action.edit'), edit_admin_answer_path(answer),type:'button', class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to t('action.delete'), admin_answer_path(answer),type:'button', method: :delete, data: { confirm: 'Are you sure?' },
                      class: 'btn btn-sm btn-outline-secondary' %>
        </div>
      </div>
      </p>
    </div>
  </div>
</div>
