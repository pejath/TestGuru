<%= form_with(model: test) do |form| %>
  <%= render 'shared/errors', resource: test %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </div>

  <div>
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level %>
  </div>

  <div>
    <%= form.label :author_id %>
    <%= form.collection_select :author_id, User.all, :id, :username, prompt: '' %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
