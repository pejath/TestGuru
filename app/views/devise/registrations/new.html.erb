<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <h2>Become a Guru</h2>
    <%= render "shared/errors", resource: resource %>

    <div class="card border-primary ">
      <div class="card-body ">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="from-group">
            <div class="field">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <p>
              <%= f.label :username %><br>
              <%= f.text_field :username, id: :user_username, autofocus: true, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :first_name %><br>
              <%= f.text_field :first_name, id: :user_first_name, autofocus: true, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :last_name %><br>
              <%= f.text_field :last_name, id: :user_last_name, autofocus: true, class: 'form-control' %>
            </p>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= t('.passwords.minimal', min: @minimum_password_length) %>)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="actions mt-2">
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          </div>

        <% end %>
      </div>

    </div>
    <%= render "devise/shared/links" %>

  </div>

</div>
