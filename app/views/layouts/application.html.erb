    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%= render 'shared/nav' %>

    <div class="container">
      <%= render 'shared/flash' %>
