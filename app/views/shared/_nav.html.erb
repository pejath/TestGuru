<header>
  <h2><%= link_to 'TestGuru', root_path %></h2>

  <% if user_signed_in? %>
    <p class="nav user">Welcome, <b><%= current_user.username %></b> Guru |
    <%= link_to 'Log Out', destroy_user_session_path, method: :delete %></p>
  <% else %>
    <p class="nav user">
      <%= link_to 'Log In', new_user_session_path %>
      <%= link_to 'Sign Up', new_user_registration_path %>
    </p>
  <% end %>
</header>
