<header class="navbar bg-light">
  <div class="container-fluid">
    <h2><%= link_to 'TestGuru', root_path, class: 'navbar-brand' %></h2>
    <span class="navbar-text">
      <% if user_signed_in? %>
        Welcome, <b><%= current_user.username %></b> Guru |
        <%= current_user.admin? ? link_to(t('action.admin_panel'), admin_tests_path) + ' | ' : nil %>
        <%= current_user.admin? ? link_to('gists', admin_gists_path) + ' | ' : nil %>
        <%= link_to(t('action.contacts'), new_contact_path)%> |
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path %> |
        <%= link_to 'Sign Up', new_user_registration_path %>
      <% end %>
    </span>
  </div>
</header>
